@{
}

@if (ViewBag.user == null)
{
    <h1>Welcome to this super fancy spa of ours!</h1>
    <p><a href="user/add">Sign Up</a></p>
}
else
{
<h1>Welcome, @ViewBag.user.Username!</h1>
<a href="/spa">View Menu</a>
<div>
    <h4>Your Information</h4>
    <p>Username: @ViewBag.user.Username</p>
    <p>Email: @ViewBag.user.Email</p>
    <p>Member Since: @ViewBag.user.SignUpDate</p>
</div>
}